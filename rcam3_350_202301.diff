+    mat[3][1] = D*(top + bottom)/height;
+
+    mat[0][2] = 0.0f;
+    mat[1][2] = 0.0f;
+    mat[2][2] = A;
+    mat[3][2] = B;
+
+    mat[0][3] = 0.0f;
+    mat[1][3] = 0.0f;
+    mat[2][3] = C;
+    mat[3][3] = D;
+
+    return true;
+}
